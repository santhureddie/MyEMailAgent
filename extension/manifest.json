{
  "manifest_version": 3,
  "name": "EmailAgent",
  "version": "0.1.0",
  "description": "AI-powered Gmail management: categorize, draft, remind, and voice control.",
  "permissions": [
    "identity",
    "storage",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://localhost:3001/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["gmail-injector.js", "sidebar.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [],
  "action": {
    "default_title": "EmailAgent"
  }
}
