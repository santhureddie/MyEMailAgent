{
  "manifest_version": 3,
  "name": "EmailAgent",
  "version": "0.1.0",
  "description": "AI-powered Gmail management: categorize, draft, remind, and voice control.",
  "permissions": [
    "identity",
    "storage",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://localhost:3001/*"
  ],
  "background": {
    "service_worker": "dist/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["dist/gmail-injector.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.js", "sidebar.css"],
      "matches": ["https://mail.google.com/*"]
    }
  ],
  "action": {
    "default_title": "EmailAgent"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
