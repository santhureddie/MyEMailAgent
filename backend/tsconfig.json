{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@types/*": ["types/*"],
      "@services/*": ["services/*"],
      "@middleware/*": ["middleware/*"]
    }
  },
  "include": ["src/**/*", "src/types/express.d.ts"],
  "exclude": ["dist", "node_modules"]
}
